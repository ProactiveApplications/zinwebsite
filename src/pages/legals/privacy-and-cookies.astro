        <tr>
            <th style="border:1px solid #d0d7de; padding:10px 14px; text-align:left; background-color:#f6f8fa; font-weight:600;">Cookie name</th>
            <th style="border:1px solid #d0d7de; padding:10px 14px; text-align:left; background-color:#f6f8fa; font-weight:600;">Purpose</th>
            <th style="border:1px solid #d0d7de; padding:10px 14px; text-align:left; background-color:#f6f8fa; font-weight:600;">Duration</th>
        </tr>
